/* 热门 */
.hot{
  width: 750rpx;
  background-color: #E6F2F0;
  padding-top: 10rpx;
}
.hot .hotfood .weui-cell{
  background-color: #fff; 
   margin-bottom: 10rpx;
}
.hot .hotfood .weui-cell__hd {
  background-color: #D81E18;
  font-size: 20rpx; 
  color: #fff;
  margin-right: 24rpx;
  padding: 6rpx;
  border-radius: 10rpx;
}
.hot-list{
  width:100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #f2f8f7;
  padding:10rpx 20rpx;
}
.hot-list .hot-list-item {
  width: 350rpx;
  box-sizing: border-box;
  border-radius: 40rpx;
  height: auto;
  border: 2rpx solid #ccc;
  margin-bottom:20rpx;
  /* border: 2rpx solid #007A60; */
  background-color: #fff; 
  padding: 20rpx;
}
.hot-list .hot-list-item .hotImg {
  height: 261rpx;
  width: 280rpx;
  margin: 0 auto;
  display: block;
  /* padding: 20rpx 0; */
  border-radius: 20rpx;
  
}
.hot-list .hot-list-item .tit {
  font-weight: bold;
  line-height: 60rpx;
  display: block;
  border-top: 2rpx solid #ccc;
  margin-top: 20rpx;
  padding: 10rpx;
}
.hot-list .hot-list-item .footitem {
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  align-items: center;
}
.hot-list .hot-list-item .footitem .item-left .userImg{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 10rpx;
}
.hot-list .hot-list-item .footitem  text{
  vertical-align: middle;
  color: #ccc;
  margin-left: 10rpx;
  font-size: 24rpx;
}
