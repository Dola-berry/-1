/* 搜索banner */
.banner {
  width: 750rpx;
  height: 400rpx;
  position: relative;
}
.banner image {
  width: 100%;
  height: 100%;
}
.banner .bg  {
  position: absolute;
  top: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 700rpx;
}
.search-item{
  float: left;
  width: 450rpx;
  position: relative;
  box-sizing: border-box;
  line-height: 90rpx;

}
.search-item input {
background-color: #E6F2F0;
  height: 90rpx;
  border-radius: 40rpx;
  width:635rpx;
  padding-left: 50rpx;
  font-size: 24rpx;
}
 .search-item .searchIcon{
position: absolute;
left: 10rpx;
top: 0rpx;
}
