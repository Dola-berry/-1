/* pages/search/search.wxss */
page {
  background-color:#f2f8f7;
}
/* 头部搜索框 */
.search {
  width: 750rpx;
  height: auto;
  background-color: #A3D399;
  padding: 40rpx 0 20rpx;

}
.search form {
  display: block;
  width: 580rpx;
  margin: 0 auto;
  overflow: hidden;
}
.search form .search-item{
  float: left;
  width: 450rpx;
  position: relative;
  box-sizing: border-box;
}
.search form .search-item input {
background-color: #95bb8d;
  height: 60rpx;
  border-radius: 40rpx;
  width: 400rpx;
  padding-left: 50rpx;
}
.search form  .search-item .searchIcon{
position: absolute;
left: 10rpx;
top: 6rpx;
}
.search form button {
  float: left;
  width: 100rpx;
  font-size: 32rpx;
  padding: 10rpx;
  margin:0;
  background-color: transparent;
  /* height: 36rpx;
  line-height: 36rpx; */
  font-weight: 400;
}

/* 搜索记录 */
.search-con {
 padding: 30rpx;
}
.search-con .title {
  font-weight: bolder;
  height: 60rpx;
  line-height: 60rpx;
}
.search-con .conlist {
  display: flex;
  flex-wrap: wrap;
}
.search-con .conlist text {
  background-color: #fff;
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 30rpx;
}