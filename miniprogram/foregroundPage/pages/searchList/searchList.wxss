/* foregroundPage/pages/list/list.wxss */
page {
  background-color:#f2f8f7;
}
.list {
  width: 750rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.list .list-item {
  width: 100%;
  display: flex;
  width: 100%;
  height: auto;
  margin-bottom: 20rpx;
  background-color: #fff;
}
.list .list-item .img {
  width: 300rpx;
  height: 300rpx;
}
.list .list-item .img image{
  width: 300rpx;
height: 243rpx;
border-radius: 20rpx;
margin-top: 35rpx;

}
.list .list-item .txt {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
}
.list .list-item .txt view .icon{
  margin-bottom: 10rpx;
}
.list .list-item .txt .list-foot{
  display: flex;
  align-items:center;
}
.list .list-item .txt .list-foot .user image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.list .list-item .txt .list-foot text {
  vertical-align: middle;
  color: #ccc;
  display: inline-block;
  margin-left: 10rpx;
  font-size: 22rpx;
}
.none {
  text-align: center;
  font-size: 40rpx;
  margin-top: 200rpx;
}