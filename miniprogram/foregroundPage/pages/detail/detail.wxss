/* foregroundPage/pages/detail/detail.wxss */
page {
  background-color:#f2f8f7;
  padding-bottom: 100rpx;
}
.detail .detail-item .swImg {
  height: 650rpx;
}
.detail .detail-item image{
  width: 100%;
  height: 100%;
  margin-bottom: 40rpx;
}
.detail .detail-item>view {
  padding: 0 40rpx;
}
.detail .detail-item .title {
  font-size: 32rpx;
  font-weight: bolder;
  height: 60rpx;
  line-height: 60rpx;
}
.detail .detail-item .address {
  font-size: 24rpx;
  color: #ccc;
  display: flex;
}
.detail .detail-item .address>view {
  margin-right: 20rpx;
  
}
.detail .detail-item-con {
  margin: 40rpx;
  border-top: 4rpx solid #ccc;
  border-bottom: 4rpx solid #ccc;
}
.scicon {
  width: 60rpx;
  height: 50rpx;
  vertical-align: middle;
  
}
.detail .detail-item-con .description {
  padding-bottom: 40rpx;
}
.detail .detail-item-con .description view {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  padding-top: 20rpx;
}
.detail .detail-item-con .description text{
  font-size: 22rpx;
}
.detail .footer {
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}
.message {
  margin: 40rpx;
}
.message .tit {
  margin-bottom: 20rpx;
}
.message .tit text {
  color: rgb(184, 180, 180);
  font-size: 24rpx;
}
.message .send {
  display: flex;
}
.message .send input {
  border: 2rpx solid #ccc;
font-size: 24rpx;
width: 500rpx;
height: 60rpx;
line-height: 60rpx;
padding-left: 30rpx;
z-index: 0;

}
.message .list {
  margin: 40rpx 0;
}
.message .list .list-item {
  /* border-bottom: 2rpx solid #ccc; */
  margin: 20rpx 0;
}
.message .list .list-item .tit {
  font-size: 30rpx;
}
.message .list .list-item .tit image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: bottom;
}
.message .list .list-item .tit text {
  font-size: 24rpx;
  color: #ccc;
  float: right;
}
.message .list .list-item .tit text.del {
  margin-left: 10rpx;
}
.message .list .list-item .txt{
   font-size: 26rpx;
   text-indent: 2em;
}
.message .send button {
  width: 120rpx;
  font-size: 28rpx;
  background-color: transparent;
}
.detail .footer>button {
  width: 50%;
  text-align: center;
  background-color: #fff;
  line-height: 100rpx;
  z-index: 111;
}
.detail .footer .share {
  background-color: #F06259;
  color: #fff;
  line-height: 60rpx;
}

.copyRight {
  color: #ccc;
  border-top: 2rpx solid #ccc;
  padding: 40rpx;
  font-size: 24rpx;
}