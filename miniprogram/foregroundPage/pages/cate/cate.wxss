/* 搜索banner */
.banner {
  width: 750rpx;
  height: 400rpx;
  position: relative;
}
.banner image {
  width: 100%;
  height: 100%;
}
.banner .bg  {
  position: absolute;
  top: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 700rpx;
}
.weui-search-bar__form {
  background-color: transparent !important;
}
.banner .bg .weui-search-bar__box,
.banner .bg .weui-search-bar__label {
  background-color:#E6F2F0 ;
  border-radius: 20rpx;
}
.banner .bg .weui-search-bar{
  border-radius: 20rpx;
  padding: 0;
  padding-right: 20rpx;
  background-color: #E6F2F0;
}
